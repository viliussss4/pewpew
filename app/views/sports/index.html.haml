- if @sports.present?
  .row
    .col-md-4
      %h4= t '.title'
    - @sports.first.get_attributes('keys', except: ['title', 'events', 'meetings']).each do |attr|
      .col-md-4
        %h4= attr
  - @sports.each do |sport|
    .row
      .col-md-4
        %a(href="#{sport_path(sport.id)}")
          = sport.title
      - sport.get_attributes('values', except: ['title', 'events', 'meetings']).each do |val|
        .col-md-4
          = val
